<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:background="@color/colorPrimary">

    <RadioGroup
        android:id="@+id/cartoon_type"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/cartoon_type_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_cartoon_layout"
            android:paddingRight="@dimen/margin_cartoon_layout"
            android:textSize="@dimen/font_accent"
            android:text="@string/cartoon_type_new" />


        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/cartoon_type_hot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_cartoon_layout"
            android:paddingRight="@dimen/margin_cartoon_layout"
            android:textSize="@dimen/font_accent"
            android:text="@string/cartoon_type_hot" />
    </RadioGroup>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/cartoon_toolbar_nav"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_cartoon_content"
        android:paddingRight="@dimen/margin_cartoon_content"/>


</RelativeLayout>