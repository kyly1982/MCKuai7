<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/usercneter_item_cartoon_workmargin">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cartooncover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:clickable="true"
        />
    <RelativeLayout
        android:id="@+id/pkroot"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlack_1">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pkcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/ic_diamond_small_activityed"
            android:textColor="@color/textColorPrimary_Light"
            android:text="123456"
            />
    </RelativeLayout>


</RelativeLayout>