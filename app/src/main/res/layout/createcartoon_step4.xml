<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/createcartoon_margin_builder"
    android:background="@drawable/frame_black_normal">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/createcartoon_hint4_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/createcartoon_frame_builder"
        android:drawableLeft="@mipmap/ic_createcartoon_hint"
        android:text="@string/createcartoon_hint_step4_1"
        android:textColor="@color/icons"/>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/createcartoon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/createcartoon_hint4_1"
        android:drawablePadding="@dimen/createcartoon_frame_builder"
        >
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/createcartoon_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColorHint="@color/textSecondary"
            android:hint="@string/createcartoon_hint_step3_2"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/createcartoon_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createcartoon_name"
        android:drawableRight="@drawable/umeng_socialize_qq_on"
        android:clickable="true"
        android:background="@null"
        android:textColor="@color/icons"
        android:text="@string/createcartoon_share"/>

</RelativeLayout>