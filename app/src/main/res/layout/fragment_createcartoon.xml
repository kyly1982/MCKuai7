<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mckuai.imc.Widget.TouchableLayout.TouchableLayout
        android:id="@+id/createcartoon_imagebuilder"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:minHeight="150dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/frame_black_bolad"
        android:layout_marginLeft="@dimen/createcartoon_margin_builder"
        android:layout_marginRight="@dimen/createcartoon_margin_builder"
        android:layout_marginBottom="@dimen/createcartoon_margin_builder"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/createcartoon_buildhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/createcartoon_imagebuilder"
        android:layout_marginBottom="@dimen/createcartoon_margin_builder"
        android:textColor="@color/textSecondary"
        android:text="@string/createcartoon_hint_step1"
        />


    <View
        android:id="@+id/createcartoon_divier"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider"
        android:layout_below="@id/createcartoon_buildhint"
        />

    <ViewFlipper
        android:id="@+id/createcartoon_operation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/createcartoon_divier"
        />




</RelativeLayout>
