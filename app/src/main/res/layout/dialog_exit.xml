<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exitdialog"
    android:layout_width="300dp"
    android:layout_height="210dp"
    android:clickable="true"
    android:layout_gravity="center"
    android:padding="1dp"
    android:background="@drawable/dialog_background">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/exitdialog_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="18sp"
        android:textColor="@color/textColorAccentr" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/exitdialog_title"
        android:gravity="center"
        android:textSize="@dimen/font_title"
        android:text="是否退出麦块？"
        />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/exitdialog_content"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="140dp"
        android:background="@color/icons"
        android:layout_below="@id/exitdialog_title"
        />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/exitdialog_cancle"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/exitdialog_content"
        android:background="@null"
        android:singleLine="true"
        android:textColor="@color/textColorPrimary"
        android:text="取消" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/exitdialog_download"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@id/exitdialog_content"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:textColor="@color/textColorPrimary"
        android:background="@color/exitdialog_defaultcolor" />

</RelativeLayout>