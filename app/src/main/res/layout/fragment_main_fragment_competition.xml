<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="320dp"
        android:layout_height="495dp"
        android:layout_centerInParent="true"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/competitionbackground"
        app:cardCornerRadius="5dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingTop="5dp">

        <com.mckuai.imc.Widget.CompetitionLayout
            android:id="@+id/competition"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/theme"
                android:layout_width="@dimen/sidlewidth_competition"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center|top"
                android:text="这\n是\n主\n题"
                android:textColor="@color/textColorPrimary_Light" />

            <View
                android:id="@+id/competition_center"
                android:layout_width="@dimen/competition_centerdivier_width"
                android:layout_height="@dimen/competition_centerdivier_width"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="@dimen/sidlewidth_competition"
                android:layout_height="wrap_content"
                android:layout_above="@id/competition_center"
                android:layout_alignParentRight="true">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/vote_top"
                    android:layout_width="@dimen/sidlewidth_competition"
                    android:layout_height="@dimen/sidlewidth_competition"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/ic_diamond_small_normal" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/vote_top"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:id="@+id/root_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/sidlewidth_competition"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/competition_center">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/vote_bottom"
                    android:layout_width="@dimen/sidlewidth_competition"
                    android:layout_height="@dimen/sidlewidth_competition"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/ic_diamond_small_normal" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/vote_bottom"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:id="@+id/root_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>
                </ScrollView>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="@dimen/competition_imagewidth"
                android:layout_height="@dimen/competition_imagewidth"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/root_top"
                android:layout_toRightOf="@id/theme"
                android:background="@drawable/bg_competition"
                android:padding="4dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/cartoon_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="fitXY" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/diamond_top"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_diamond_big_normal" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_bottom"
                android:layout_width="@dimen/competition_imagewidth"
                android:layout_height="@dimen/competition_imagewidth"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/root_bottom"
                android:layout_toRightOf="@id/theme"
                android:background="@drawable/bg_competition"
                android:padding="4dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/cartoon_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="fitXY">

                </android.support.v7.widget.AppCompatImageView>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/diamond_bottom"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_diamond_big_normal" />
            </RelativeLayout>


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/diamond_middle_background"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_diamond_big_normal" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/diamond_middle"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_diamond_big_activited" />

        </com.mckuai.imc.Widget.CompetitionLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
