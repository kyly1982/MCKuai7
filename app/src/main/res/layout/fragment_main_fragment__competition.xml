<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@null">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="495dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/competitionbackground"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:layout_centerInParent="true">

        <com.mckuai.imc.Widget.CompetitionLayout
            android:id="@+id/competition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="8dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/theme"
                android:layout_width="@dimen/sidlewidth_competition"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center|top"
                android:text="这\n是\n主\n题"
                android:textColor="@color/textColorPrimary_Light" />

            <View
                android:id="@+id/competition_center"
                android:layout_width="@dimen/competition_centerdivier_width"
                android:layout_height="@dimen/competition_centerdivier_width"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:id="@+id/root_top"
                android:layout_width="@dimen/sidlewidth_competition"
                android:layout_height="wrap_content"
                android:layout_above="@id/competition_center"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/vote_top"
                    android:layout_width="@dimen/sidlewidth_competition"
                    android:layout_height="@dimen/sidlewidth_competition"
                    android:background="@mipmap/ic_diamond_small_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/root_bottom"
                android:layout_width="@dimen/sidlewidth_competition"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/vote_bottom"
                    android:layout_width="@dimen/sidlewidth_competition"
                    android:layout_height="@dimen/sidlewidth_competition"
                    android:background="@mipmap/ic_diamond_small_normal"/>
            </LinearLayout>


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/diamond_top"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_diamond_big_normal" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/diamond_bottom"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_diamond_big_normal"  />

            <LinearLayout
                android:id="@+id/layout_top"
                android:layout_width="@dimen/competition_imagewidth"
                android:layout_height="@dimen/competition_imagewidth"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/root_top"
                android:layout_toRightOf="@id/theme"
                android:background="@drawable/bg_competition"
                android:padding="2dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/cartoon_top"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_share"  />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_bottom"
                android:layout_width="@dimen/competition_imagewidth"
                android:layout_height="@dimen/competition_imagewidth"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/root_bottom"
                android:layout_toRightOf="@id/theme"
                android:background="@drawable/bg_competition"
                android:padding="2dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/cartoon_bottom"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_share" >

                </android.support.v7.widget.AppCompatImageView>
            </LinearLayout>


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/diamond_middle_background"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_diamond_big_normal"  />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/diamond_middle"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_diamond_big_activited"  />

        </com.mckuai.imc.Widget.CompetitionLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
